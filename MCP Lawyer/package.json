{
  "name": "mcp-lawyer",
  "version": "1.0.0",
  "description": "AI-powered Legal Practice Management System",
  "main": "server.py",
  "scripts": {
    "start": "python server.py",
    "start:client": "cd client && npm run dev",
    "start:dev": "concurrently \"npm run start\" \"npm run start:client\"",
    "test": "pytest",
    "lint": "flake8 app && cd client && npm run lint",
    "format": "black app && cd client && npm run format"
  },
  "keywords": ["legal", "ai", "practice-management", "canadian-law"],
  "author": "Chris June",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
